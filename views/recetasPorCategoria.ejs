<h2 class="pb-4" >Recetas de Categoria <%=name%></h2>

<section>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Inicio</a></li>
          <li class="breadcrumb-item active" aria-current="page">Recetas de Comida <%=name%></li>
        </ol>
      </nav>
    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        <% if(food != '') { %>
          <% food.recetas.forEach((receta, index) => { %>
        <a href="/receta/<%=receta._id%>" class="col text-center category_link">
          <div class="category_img category_img--large shadow">
            <img
              src="/img/<%= receta.image %>"
              alt="<%= receta.name %>"
              loading="lazy"
            />
          </div>
          <div class="pt-1"><%= receta.name %></div>
        </a>
         <% }) %>
        <% } %>
      </div>
</section>

