<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <h3>Categorias</h3>
  <% if(categories != '') { %>
 <% categories.forEach(function(categoria, index) { %>
  <a href="/categorias/<%- categoria.name %>" class="col tex-center category_link">
    <div class="category_img shadow">
      <img
        src="img/<%- categoria.image %>"
        alt="comida"
        loading="lazy"
        width="250"
        height="250"
      />
    </div>
    <div class="pt-1"><%- categoria.name %></div>
  </a>
  <% }) %>
  <% } %>
  <a href="/categoria" class="col tex-center category_link">
    <div class="category_img shadow">
      <img
        src="img/food2.jpg"
        alt="Todas las categorias"
        loading="lazy"
        width="250"
        height="250"
      />
    </div>
    <div class="pt-1">Ver Todo</div>
  </a>
</div>

<!-- end categorias -->
<!-- ultima seccion inicio -->
<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Recetas recientes</h2>
    <a href="/explore-latest" class="ms-auto btn btn-secondary">Ver mas</a>
  </div>

  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(food != '') { %>
      <% food.recetas.forEach((receta, index) => { %>
    <a href="/receta/<%=receta._id%>" class="col text-center category_link">
      <div class="category_img category_img--large shadow">
        <img
          src="img/<%= receta.image %>"
          alt="<%= receta.name %>"
          loading="lazy"
        />
      </div>
      <div class="pt-1"><%= receta.name %></div>
    </a>
     <% }) %>
    <% } %>

  </div>
</section>
<!-- recetas recientes seccion fin -->
