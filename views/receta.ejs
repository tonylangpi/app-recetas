<h2>Detalle de receta</h2>

<% if(recetas != null) {%>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Inicio</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%- recetas.name%></li>
        </ol>
      </nav>
  <div class="row">
     <div class="col-12 col-md-4">
         <img src="/img/<%- recetas.image %>" class="img-fluid sticky-top" style="top: 20px" alt="<%- recetas.name %>" loading="lazy">
     </div>
     <div class="col-12 col-md-8">
         <div class="row">
              <div class="col-12"><% recetas.name %></div>
              <div class="col-12 mb-4"><i class="bi bi-tag"></i><%- recetas.category %></div>
              <div class="col-12" style="white-space: pre-line;">
                  <h4>Descripcion platillo</h4>
                  <p><%- recetas.description %></p>
              </div>
         </div>
     </div>
     <div class="row pt-2">
        <div class="col-12">
            <h4>Ingredientes</h4>
            <ul class="list-group list-group-flush">
                <% recetas.ingredients.map((receta, index) => { %>
                   <li class="list-group-item">
                     <%= receta %>
                   </li>
                <% }) %>
            </ul>
        </div>
     </div>
  </div>
<% } else { %> 
   <p>No se encontro este item</p>
<% } %>